{
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitAny": false,
      "removeComments": true,
      "preserveConstEnums": true,
      "moduleResolution": "node",
      "outDir": "dist",
      "strictNullChecks": true,
      "sourceMap": true,
      "target": "es5"
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "**/*.spec.ts"
    ]
  }